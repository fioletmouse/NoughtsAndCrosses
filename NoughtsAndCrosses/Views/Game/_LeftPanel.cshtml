@*Панель кнопок*@
<div class="row">
    <div class="col-xs-12 text-right">
        @Html.ActionLink("Новая игра", "Index", "Game", null, new { @class = "buttons" }) 
        <span class="glyphicon glyphicon-star-empty"></span>
    </div>
    <div class="col-sm-12 hidden-xs text-right">
        @Html.ActionLink("Вся статистика", "GetGamesList",  "Game", null, 
            new {@class="buttons", data_toggle="modal", onclick="gamesListView(event, null)"})
        <span class="glyphicon glyphicon-star-empty"></span>
    </div>
    <div class="col-sm-12 hidden-xs text-right">
        @Html.ActionLink("Текущие игры", "GetGamesList",  "Game", null, 
            new {@class="buttons", data_toggle="modal", onclick="gamesListView(event, true)"})
        <span class="glyphicon glyphicon-star-empty"></span>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-10 col-lg-offset-2 col-sm-12 hidden-xs" id="Overall"></div>
</div>


<div id="ReportModal" class="modal fade">
   <div class="modal-dialog">
    <div class="modal-content">
      <!-- Заголовок модального окна -->
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">Статистика игр</h4>
        <input type="hidden" id="IsSession" />
      </div>
      <!-- Основное содержимое модального окна -->
      <div class="modal-body">
      </div>
    </div>
  </div>
</div>

