@using NoughtsAndCrosses.Models
@model List<Overall>
@{
    if(Model.Count > 0)
    {
        <h3 class="visible-md visible-lg">Статистика</h3>
        <ul class="list-group">
        @foreach (var summary in Model)
        {
            <li class="list-group-item">@summary.ResultType <span class="badge">@summary.Count</span></li>
        }
        </ul>
    }
    else
    {
        <p class="text-center">Нет данных</p>
    }
}